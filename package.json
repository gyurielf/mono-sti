{
    "name": "monorepo-sti",
    "version": "0.0.1",
    "description": "mono-sti",
    "private": true,
    "type": "module",
    "scripts": {
        "build:apps": "pnpm -r --filter=./apps/* build",
        "build:packages": "pnpm -r --filter=./packages/* build",
        "changeset:publish": "changeset publish",
        "changeset:version": "changeset version && pnpm -r generate:version && git add --all",
        "changeset": "changeset",
        "check": "cd packages/sti && pnpm build && cd ../../ && pnpm -r check",
        "ci:release": "changeset publish",
        "ci:version": "changeset version",
        "lint:fix": "pnpm -r lint:fix",
        "lint": "pnpm -r lint",
        "package": "pnpm -r package",
        "prepare:husky": "husky install",
        "test": "pnpm test -r --filter=./packages/*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gyurielf/mono-sti.git"
    },
    "engines": {
        "npm": ">= 8",
        "yarn": ">=2",
        "node": ">= 16",
        "pnpm": ">= 7"
    },
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@changesets/get-github-info": "^0.5.2",
        "@changesets/types": "^5.2.1",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.44.0",
        "eslint-plugin-svelte": "^2.32.2",
        "eslint-plugin-unicorn": "^47.0.0",
        "prettier": "^2.8.8",
        "prettier-plugin-svelte": "^2.10.1"
    },
    "packageManager": "pnpm@8.6.0"
}
